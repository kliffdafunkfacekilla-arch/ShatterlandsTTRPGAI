#:kivy 2.1.0

<DungeonBackground@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'game_client/assets/graphics/ui/dungeon_bg.png'

<DungeonButton@Button>:
    background_normal: ''
    background_down: ''
    background_color: 0.2, 0.15, 0.1, 1 # Dark brown/stone
    border: (0, 0, 0, 0)
    color: 0.9, 0.8, 0.6, 1 # Gold-ish text
    font_size: '18sp'
    bold: True
    canvas.after:
        Color:
            rgba: (1, 1, 1, 0.1) if self.state == 'down' else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size

<ParchmentPanel@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'game_client/assets/graphics/ui/parchment_bg.png'

<ParchmentLabel@Label>:
    color: 0.1, 0.05, 0.05, 1 # Dark brown text

<DungeonLabel@Label>:
    color: 0.9, 0.9, 0.9, 1
    font_size: '16sp'

<DarkTextLabel@Label>:
    color: 0.1, 0.05, 0.05, 1 # Dark brown text
    font_size: '16sp'

