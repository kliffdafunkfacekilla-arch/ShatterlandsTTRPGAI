#:kivy 2.1.0

<DungeonBackground@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        BorderImage:
            pos: self.pos
            size: self.size
            source: 'atlas://game_client/assets/graphics/ui/uipack_rpg/panel_brown'
            border: (15, 15, 15, 15)

<DungeonButton@Button>:
    background_normal: 'atlas://game_client/assets/graphics/ui/uipack_rpg/buttonLong_brown'
    background_down: 'atlas://game_client/assets/graphics/ui/uipack_rpg/buttonLong_brown_pressed'
    background_color: 1, 1, 1, 1 # Reset color since we have textures
    border: (10, 10, 10, 10)
    color: 0.9, 0.8, 0.6, 1 # Gold-ish text
    font_size: '18sp'
    bold: True

<ParchmentPanel@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        BorderImage:
            pos: self.pos
            size: self.size
            source: 'atlas://game_client/assets/graphics/ui/uipack_rpg/panel_beige'
            border: (15, 15, 15, 15)

<ParchmentLabel@Label>:
    color: 0.1, 0.05, 0.05, 1 # Dark brown text

<DungeonLabel@Label>:
    color: 0.9, 0.9, 0.9, 1
    font_size: '16sp'

<DarkTextLabel@Label>:
    color: 0.1, 0.05, 0.05, 1 # Dark brown text
    font_size: '16sp'

